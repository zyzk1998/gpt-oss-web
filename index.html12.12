            formHtml += `<button class="btn btn-primary btn-run" onclick="submitToolForm('${formId}', ${toolInfoStr})">ğŸš€ ç¡®è®¤å¹¶æ‰§è¡Œ</button></div>`;
            appendMessage('ai', formHtml, null, null, true);
